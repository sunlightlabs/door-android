<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="0"
    	android:padding="12dp"
    	
    	android:background="#336699"
    	android:gravity="center_vertical"
    	>
    	
    	<ImageView 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="5dp"
    		android:layout_marginRight="24dp"
    		
    		android:src="@drawable/icon"
    		/>
    		
    	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		
    		android:textColor="#ffffff"
    		android:textSize="30sp"
    		android:text="Sunlight 3000"
    		/>
    	
    </LinearLayout>
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="#dddddd"
    	/>	
    
    <LinearLayout android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	
    	android:background="#668899"
    	
    	android:paddingTop="20dp"
    	android:paddingLeft="40dp"
    	android:paddingRight="40dp"
    	>
    
	    <TextView
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	
	    	android:textColor="#ffffff"
	    	android:textSize="16sp"
	    	android:text="Enter your 3-digit PIN:"
	    	/>
	    	
	    <EditText android:id="@+id/pin"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	
	    	android:inputType="phone"
	    	android:password="true"
	    	/>
	    
	    <Button android:id="@+id/open_door"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="20dp"
	    	
	    	android:textSize="20sp"
	    	android:text="Open Door"
	    	/>
	    
	    <ProgressBar android:id="@+id/opening"
	   		android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		
	   		android:layout_gravity="center_horizontal"
	   		android:layout_marginTop="40dp"
	   		
	   		style="?android:attr/progressBarStyleLarge"
	   		
	   		android:visibility="invisible"
	   		/>
    
    </LinearLayout>
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1dp"
    	android:background="#dddddd"
    	/>
    
    <TextView android:id="@+id/device_id"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="0"
    	
    	android:paddingTop="5dp"
    	android:paddingLeft="12dp"
    	android:paddingBottom="5dp"
    	android:background="#555555"
    	
    	android:textColor="#dddddd"
    	android:textSize="14sp"
    	android:text="Device ID:"
    	/>
    
</LinearLayout>